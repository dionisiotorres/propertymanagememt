<odoo>
  <data>
    <record model="ir.ui.view" id="view_space_unit_form">
      <field name="name">Space Unit Form</field>
      <field name="model">pms.space.unit</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <div class="oe_button_box" name="button_box">
              <button type="object" class="oe_stat_button" icon="fa-archive">
                  <!-- <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/> -->
              </button>
            </div>
              <div class="oe_title">
                <label for="name" class="oe_edit_only" readonly="1" string="Unit No"/>
                <h1  class="mt0">
                  <field name="name" invisible='1'/>
                  <div>
                      <field name="unit_code" readonly="1" class="oe_inline"/>
                      <field name="unit_no" 
                      required="1"
                       class="oe_inline"/>
                  </div>
                </h1>
              </div>
              <group>
                <group> 
                  <field name="property_id"/>
                  <field name="floor_id"/>
                  <field name="unittype_id"/>
                  <field name="uom"/>
                </group>
                <group> 
                  <field name="area"/>
                  <field name="start_date"/>
                  <field name="end_date"/>
                  <field name="remark"/>
                  <!-- <field name="status"/>       -->
                </group>
              </group>
              <notebook>
                  <page string="Facilities" >
                      <field name="facility_line" widget="kanban">               
                        <kanban>
                        <field name="id"/>
                        <field name="utility_type_id"/> 
                        <field name="interface_type"/>
                        <field name="meter_no" />
                        <field name="status"/>
                        <templates>
                            <t t-name="kanban-box">
                                <div t-att-class="' oe_kanban_global_click'">
                                    <div class="o_kanban_image">
                                      <img alt="image"  t-att-src='_s + "/property_management_system/static/src/image/cpaild-maint_man.jpg"'/>
                                    </div>
                                    <div class="oe_kanban_details">                                     
                                        <div t-if="record.utility_type_id.raw_value">Utility Supply Type: <field name="utility_type_id"/></div>
                                        <div t-if="record.interface_type.raw_value">Interface Type:<field name="interface_type"/></div>
                                        <div t-if="record.meter_no.raw_value">Meter No:<field name="meter_no"/></div>
                                        <div class="text-success float-right mb4" t-if="record.status.raw_value"><i class="fa fa-circle" role="img" aria-label="status" title="Status"></i></div>
                                        <div class="text-danger float-right mb4" t-if="!record.status.raw_value"><i class="fa fa-circle" role="img" aria-label="Other" title="Other"></i></div>
                                    </div>
                                </div>
                            </t>
                          </templates>
                        </kanban> 
                  </field>
              </page>
              </notebook>
          </sheet>
        </form>
      </field>
    </record>
    <record model="ir.ui.view" id="view_space_tree">
      <field name="name">Space Unit list</field>
      <field name="model">pms.space.unit</field>
      <field name="arch" type="xml">
        <tree>
          <field name="property_id"/>
          <field name="floor_id"/>
          <field name="name"/> 
          <field name="unittype_id"/>
          <field name="uom"/>   
          <field name="start_date"/> 
          <field name="end_date"/>
          <field name="status"/>   
        </tree>
      </field>
    </record>
     <record model="ir.ui.view" id="view_space_filter">
      <field name="name">Space Unit Filter</field>
      <field name="model">pms.space.unit</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="property_id"/>
          <field name="floor_id"/>
          <field name="start_date"/>  
        </search>
      </field>
    </record>
     <record id="action_space_all" model="ir.actions.act_window">
       <field name="name">Units</field>
       <field name="res_model">pms.space.unit</field>
       <field name="view_type">form</field>
       <field name="view_mode">tree,form</field>
       <field name="view_id" ref="view_space_tree"/> 
    </record>
    <menuitem  id="space_menu_root" 
      name="Unit" 
      parent="property_management_menu"
      action="action_space_all"
      sequence="1"/>
  </data>
</odoo>