<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_cancel_wiz" model="ir.ui.view">
            <field name="name">Activate Lease</field>
            <field name="model">pms.lease.activate.wizard</field>
            <field name="arch" type="xml">
                <form string="Cancel Lease">
                    <p class="oe_grey">
                        Will be generate rent schedules and change to new state. 
                        In the state, space units in this lease will not allow 
                        to activate in the other booking state of the lease with the space units that are existing in this lease.
                    </p>
                    <footer>
                        <button name="action_activate_wiz" string="Activate" type="object" context="{'active_id':active_id}" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    <record id="action_activate_wiz" model="ir.actions.act_window">
        <field name="name">ZPMS</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pms.lease.activate.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="context">{'active_id':active_id}</field>
        <field name="target">new</field>
    </record>

</odoo>
