<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_terminate_wiz" model="ir.ui.view">
            <field name="name">pms.unit.facilities.wizard</field>
            <field name="model">pms.unit.facilities.wizard</field>
            <field name="arch" type="xml">
                <form string="ZPMS">
                   <group>
                        <field name="facility_ids" widget="many2many" domain="[('inuse','=',False)]">
                            <tree>
                                <field name="name" string="Utilities"/>
                                <field name="utilities_type_id" options="{'no_create_edit': True}"/>
                                <field name="interface_type" options="{'no_create_edit': True}"/>
                                <field name="inuse" options="{'no_create_edit': True}"/>
                            </tree>
                        </field>
                   </group>
                    <footer>
                        <button name="action_add_facilities" string="ADD" type="object" context="{'active_id':active_id}" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    <record id="action_facilties_wiz" model="ir.actions.act_window">
        <field name="name">ZPMS</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pms.unit.facilities.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
